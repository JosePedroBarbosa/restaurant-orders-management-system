#!/usr/bin/env node

/**
 * Module dependencies.
 */

const app = require('../app');
const debug = require('debug')('projeto-paw:server');
const http = require('http');
const { Server } = require('socket.io');

//  MongoDB Connection
const connectDB = require("../lib/database"); 

/**
 * Get port from environment and store in Express.
 */

const port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

//  Start DB Connection
connectDB();

/**
 * Create HTTP server.
 */

const server = http.createServer(app);

// Criar instÃ¢ncia do Socket.IO ligada ao servidor
const io = new Server(server, {
  cors: {
    origin: 'http://localhost:4200',
    methods: ['GET', 'POST', 'PUT'],
    credentials: true
  }
});

// Middleware para expor o `io` na app (disponÃ­vel nos controllers)
app.set('io', io);

// Eventos socket
io.on('connection', (socket) => {
  console.log('âœ… Cliente conectado via WebSocket:', socket.id);

  socket.on('joinOrderRoom', (orderId) => {
    socket.join(orderId);
    console.log(`ðŸŸ¢ Socket ${socket.id} juntou-se Ã  sala da order ${orderId}`);
  });

  socket.on('joinRestaurantRoom', (restaurantId) => {
    socket.join(restaurantId);
    console.log(`ðŸŸ¢ Socket ${socket.id} juntou-se Ã  sala do restaurante ${restaurantId}`);
  });

  socket.on('disconnect', () => {
    console.log('ðŸ”Œ Cliente desconectado:', socket.id);
  });
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  const bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  const addr = server.address();
  const bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
